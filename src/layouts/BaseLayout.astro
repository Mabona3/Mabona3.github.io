---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link
            rel="preload"
            href="/fonts/IBMPlexMono-Regular.ttf"
            as="font"
            type="font/ttf"
            crossorigin
        />
        <title>{title}</title>
    </head>
    <body>
        <div class="container">
            <slot />
        </div>
    </body>
</html>

<style>
    body {
        font-family: var(--font-display);
        background-color: var(--color-bg);
        color: #cdcdcd;
        min-height: 100vh;
        line-height: 1.6;
        font-size: 1rem;
    }

    .container {
        max-width: 900px;
        padding: 3rem 2rem;
        margin: 0 auto;
        width: 100%;
    }

    @media (max-width: 768px) {
        .container {
            padding: 2rem 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 1.3rem 1rem;
        }
    }
</style>
